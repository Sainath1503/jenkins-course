node {

  // job
  try {
    stage('build') {
      println('so far so good...')
    }
    stage('test') {
      println('A test has failed!')
      sh 'exit 1'
    }
  } catch(e) {
    // mark build as failed
    currentBuild.result = "FAILURE";

    // send slack notification
	node{
    sh "curl -X POST --data-urlencode "payload={\"channel\": \"#testautomation\", \"username\": \"webhookbot\", \"text\": \"This is posted to #testautomation and comes from a bot named webhookbot.\", \"icon_emoji\": \":ghost:\"}" https://hooks.slack.com/services/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"}
    // throw the error
    throw e;
  }
}
